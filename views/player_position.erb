<h1> Players By Position </h1>
<h2> <%= params[:position ] %> </h2>

<table class="table">
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Team</th>
  </tr>
  <% @players.each do |player| %>
  <tr>
    <td> <%= player[:first_name] %> </td>
    <td> <%= player[:last_name] %> </td>
    <td> <%= player[:team] %></td>
  </tr>
  <% end %>
</table>
